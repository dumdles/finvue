<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfilePage">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/product_sans_regular"
                android:text="Name"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:font="@font/product_sans_regular"
                android:fontFamily="@font/product_sans_regular"
                android:text="example@email.com" />

            <TextView
                android:id="@+id/join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:font="@font/product_sans_regular"
                android:fontFamily="@font/product_sans_regular"
                android:text="Joined 28 November 2023" />

            <Button
                android:id="@+id/edit_profile_btn"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="300dp"
                android:layout_height="41dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/product_sans_regular"
                android:text="Edit Profile"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_button_2"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/baseline_settings"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/product_sans_regular"
            android:text="Settings"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_out_btn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_2"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/baseline_logout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="center_vertical"
            android:text="Sign out"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_2"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/outline_info" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_regular"
                        android:paddingVertical="15dp"
                        android:text="About this app"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="finvue is a financial literacy application built to help Singaporean teenagers track the spending while also learning the importance of saving money. \n\nMade by Dylan and Tasneem for ET0529"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/product_sans_regular"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>